#include <iostream>
using namespace std;


class Person {
protected:
    string name;
    int age;

public:
    void inputPerson() {
        cout << "Enter name: ";
        getline(cin, name);
        cout << "Enter age: ";
        cin >> age;
        cin.ignore(); 
    }

    void display() const {
        cout << "Name: " << name << endl;
        cout << "Age: " << age << endl;
    }
};


class Student : public Person {
private:
    int roll_number;

public:
    void inputStudent() {
        cout << "Enter roll number: ";
        cin >> roll_number;
        cin.ignore();
    }

    void showDetails() const {
        cout << "Roll Number: " << roll_number << endl;
    }
};

int main() {
    Student s;

    
    s.inputPerson();

  
    s.inputStudent();

  
    cout << "\nPerson Details:" << endl;
    s.display();


    cout << "Student Details:" << endl;
    s.showDetails();

    return 0;
}
