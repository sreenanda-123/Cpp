#include <iostream>
using namespace std;

class Rectangle {
private:
    float length;
    float width;

public:
    
    Rectangle() {
        length = 0;
        width = 0;
        cout << "Default constructor called.\n";
    }

    
    Rectangle(float l, float w) {
        length = l;
        width = w;
        cout << "Parameterized constructor called.\n";
    }

    
    void display() {
        cout << "Length: " << length << ", Width: " << width << endl;
    }

    
    ~Rectangle() {
        cout << "Destructor called for Rectangle with Length = " 
             << length << " and Width = " << width << endl;
    }
};

int main() {
    
    Rectangle r1;
    cout << "Rectangle 1 details: ";
    r1.display();

  
    Rectangle r2(10.5, 5.2);
    cout << "Rectangle 2 details: ";
    r2.display();

    cout << "\nExiting program... Destructors will be called automatically.\n";

    return 0;
}
